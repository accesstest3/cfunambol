<assembly>
    <formats>
      <format>zip</format>
      <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>Funambol/plug-ins/cl/lib</outputDirectory>
            <fileMode>0774</fileMode>
            <excludes>
                <exclude>org.jibx:jibx-run</exclude>
                <exclude>commons-codec:commons-codec</exclude>
                <exclude>commons-lang:commons-lang</exclude>
                <exclude>joda-time:joda-time</exclude>
                <exclude>funambol:core-framework</exclude>
                <exclude>funambol:pim-framework</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    <fileSets>
      <fileSet>
        <outputDirectory>Funambol/plug-ins/cl/docs</outputDirectory>
        <directory>target/generated-sources</directory>
        <lineEnding>keep</lineEnding>
        <includes>
            <include>release.properties</include>
        </includes>
      </fileSet>
      <fileSet>
        <outputDirectory>Funambol/plug-ins/cl/bin</outputDirectory>
        <directory>target/generated-sources/bin</directory>
        <lineEnding>dos</lineEnding>
        <includes>
          <include>*.bat</include>
          <include>*.cmd</include>
        </includes>
      </fileSet>      
      <fileSet>
        <outputDirectory>Funambol/plug-ins/cl/bin</outputDirectory>
        <directory>target/generated-sources/bin</directory>
        <lineEnding>unix</lineEnding>
        <includes>
          <include>*.sh</include>
        </includes>
        <fileMode>0775</fileMode>
      </fileSet>
      <fileSet>
        <outputDirectory>Funambol/plug-ins/cl</outputDirectory>
        <directory>target/generated-sources</directory>
        <includes>
          <include>config/**/*</include>
        </includes>
      </fileSet>
      <fileSet>
        <outputDirectory>Funambol/plug-ins/cl</outputDirectory>
        <directory>.</directory>
        <includes>
          <include>COPYING</include>
        </includes>
      </fileSet>
      <fileSet>
        <outputDirectory>Funambol/plug-ins/cl/db/briefcase</outputDirectory>
        <directory>target/generated-sources</directory>
        <includes>
          <include>db/**/*</include>
        </includes>
      </fileSet>
    </fileSets>
</assembly>
