--><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>funambol</groupId>
  <artifactId>ctp-client-driver</artifactId>
  <packaging>jar</packaging>
  <version>9.1.0-SNAPSHOT</version>
  <name>Funambol CTP Client Driver</name>
  <url>http://www.funambol.com</url>

  <parent>
    <groupId>funambol</groupId>
    <artifactId>funambol</artifactId>
    <version>9.1.0</version>
  </parent>

  <dependencies>

    <!--
        Internal dependencies
    -->

    <dependency>
        <groupId>funambol</groupId>
        <artifactId>core-framework</artifactId>
        <version>9.1.0-SNAPSHOT</version>
    </dependency>

    <dependency>
        <groupId>funambol</groupId>
        <artifactId>ctp-core</artifactId>
        <version>9.1.0-SNAPSHOT</version>
    </dependency>

    <dependency>
        <groupId>funambol</groupId>
        <artifactId>ctp-mina-codec</artifactId>
        <version>9.1.0-SNAPSHOT</version>
    </dependency>

    <!--
        External dependencies
    -->

    <dependency>
        <groupId>org.apache.mina</groupId>
        <artifactId>mina-core</artifactId>
        <version>1.1.2</version>
    </dependency>

    <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-log4j12</artifactId>
        <version>1.4.2</version>
        <scope>runtime</scope>
    </dependency>

    <dependency>
        <artifactId>log4j</artifactId>
        <groupId>log4j</groupId>
        <version>1.2.14</version>
    </dependency>

  </dependencies>

  <scm>
      <connection>scm:svn:https://guest@core.forge.funambol.org/svn/core/trunk/funambol/ctp/ctp-client-driver</connection>
      <developerConnection>scm:svn:https://core.forge.funambol.org/svn/core/trunk/funambol/ctp/ctp-client-driver</developerConnection>
      <url>https://core.forge.funambol.org/svn/core/trunk/funambol/ctp/ctp-client-driver</url>
  </scm>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <!--
            The Funambol Maven Plugin enables the use of the following
            goals:
            - funambol:properties
        -->
        <groupId>funambol</groupId>
        <artifactId>funambol-plugin</artifactId>
        <version>1.0.7</version>
        <executions>
          <execution>
            <id>prepare-resources</id>
            <phase>package</phase>
            <goals>
              <goal>resources</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <outputDirectory>${project.build.directory}/generated-sources</outputDirectory>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <groupId>org.apache.maven.plugins</groupId>
        <configuration>
          <descriptors>
            <descriptor>src/assembly/bin.xml</descriptor>
          </descriptors>
          <appendAssemblyId>true</appendAssemblyId>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>